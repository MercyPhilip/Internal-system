<com:TContent ID="MainContent">
<com:Application.controls.fancybox.FancyBox />
<com:Application.controls.chosen.Chosen />
<com:TCallback ID="priceMatchingBtn" OnCallback = 'Page.priceMatching' />
<com:TCallback ID="toggleItemBtn" OnCallback = 'Page.toggleItem' />
<com:TCallback ID="getCategoriesBtn" OnCallback="getCategories" />
	<div class="pagewrapper productlistwraper">
		<div class="col-md-12">
			<div class="panel panel-default" id="searchPanel" style="overflow: visible;">
				<div class="panel-heading">
					<label for="showSearch">Show Search Criteria?</label>
					<input id="showSearch" type="checkbox" onclick="$(this).up('#searchPanel').down('.panel-body').toggle();">
					<span class="pull-right">
						<span id="searchBtn" class="btn btn-primary btn-sm" data-loading-text="searching ..." onclick="pageJs.getSearchCriteria().getResults(true, <%= $this->pageSize %>);" >Search</span>
					</span>
				</div>
				<div class="panel-body search-panel" id="searchDiv" style="display: none; overflow: visible;">
					<div class="row">
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">SKU:</label>
	                           <input type="text" search_field="pro.sku" placeholder="The SKU of the product" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Name:</label>
	                           <input type="text" search_field="pro.name" placeholder="The name of the product" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-2">
                            <div class="form-group form-group-sm input-group">
                               <label class="input-group-addon">Active:</label>
                               <select search_field="pro.active" class="form-control input-sm">
                                    <option value="1">YES</option>
                                    <option value="0">NO</option>
                                    <option value=" ">All</option>
                               </select>
                           </div>
                        </div>
						<div class="col-md-2">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Status:</label>
	                           <div class="form-control" style="padding: 0px; height: 100%;">
                                    <select search_field="pro.productStatusIds" multiple class="chosen"></select>
                                </div>
	                       </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
				                <label class="input-group-addon">Manufacturers: </label>
				                <div class="form-control" style="padding: 0px; height: 100%;">
					                <select search_field="pro.manufacturerIds" multiple class="chosen"></select>
				                </div>
	                        </div>
                        </div>
                        <div class="col-md-4">
	                        <div class="form-group form-group-sm input-group">
				                <label class="input-group-addon">Suppliers: </label>
				                <div class="form-control" style="padding: 0px; height: 100%;">
				                	<select search_field="pro.supplierIds" multiple class="chosen"></select>
		                        </div>
	                        </div>
						</div>
                        <div class="col-md-4">
	                        <div class="form-group form-group-sm input-group">
				                <label class="input-group-addon">Categories: </label>
				                <div class="form-control" style="padding: 0px; height: 100%;">
				                	<select search_field="pro.productCategoryIds" multiple class="chosen"></select>
		                        </div>
	                        </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-12 list-panel">
			<div class="panel panel-default">
				<div class="panel-heading">
					Found <label id="total-found-count">0</label> Products:
				</div>
				<div class="table-responsive" style="overflow: auto; height: 1440px;">
	                <table class="table table-hover" id="item-list"></table>
	            </div>
			</div>
		</div>
	</div>
</com:TContent>
