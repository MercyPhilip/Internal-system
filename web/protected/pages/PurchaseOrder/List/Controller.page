<com:TContent ID="MainContent">
<com:Application.controls.fancybox.FancyBox />
<com:Application.controls.chosen.Chosen />
<com:TDatePicker Style="display:none;"/>
<com:TCallback ID="deactivateItemBtn" OnCallback = 'Page.deactivateItems' />
	<div class="pagewrapper productlistwraper">
		<div class="col-xs-12">
			<div class="panel panel-default" id="searchPanel">
				<div class="panel-heading">
					<label for="showSearch">Show Search Criteria?</label>
					<input id="showSearch" type="checkbox" onclick="$(this).up('#searchPanel').down('.panel-body').toggle();">
					<span class="pull-right">
						<span id="searchBtn" class="btn btn-primary btn-sm" data-loading-text="searching ..." >Search</span>
					</span>
				</div>
				<div class="panel-body search-panel" id="searchDiv" style="display: none; overflow: visible;">
					<div class="row">
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">PO No.:</label>
	                           <input type="text" search_field="po.purchaseOrderNo" placeholder="The Purchase Order Number" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Supplier Ref:</label>
	                           <input type="text" search_field="po.supplierRefNo" placeholder="The refrerence number from the supplier" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Order Date:</label>
								<div>
	                           <input type="datetime" search_field="po.orderDate_from" placeholder="The order date - from" class="form-control input-sm datepicker">
	                           <span onclick="$(this).up('div').down('input').value='' " class="glyphicon glyphicon-remove-circle pull-right btn" aria-hidden="aria-hidden" undefined="position: absolute; z-index: 999; left: 97%;" style="position: absolute; z-index: 999; left: 94%; top: -4%;"></span>
								</div><div>
	                           <input type="datetime" search_field="po.orderDate_to" placeholder="The order date - to" class="form-control input-sm datepicker">
	                           <span onclick="$(this).up('div').down('input').value='' " class="glyphicon glyphicon-remove-circle pull-right btn" aria-hidden="aria-hidden" undefined="position: absolute; z-index: 999; left: 97%;" style="position: absolute; z-index: 999; left: 94%; top: 46%;"></span>
	                           </div>
	                       </div>
						</div>
						<div class="col-md-4">
	                        <div class="form-group form-group-sm input-group">
				                <label class="input-group-addon">Suppliers: </label>
				                <div class="form-control" style="padding: 0px; height: 100%;">
				                	<select search_field="po.supplierIds" multiple class="chosen"></select>
		                        </div>
	                        </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Status:</label>
	                           <div class="form-control" style="padding: 0px; height: 100%;">
                                    <select id="statusSelect" search_field="po.status" multiple class="chosen"></select>
                                </div>
	                       </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12 list-panel">
			<div class="panel panel-default list-panel">
				<div class="panel-heading">
					Found <label id="total-found-count">0</label> <%= $this->getFocusEntity() %>:
				</div>
				<small class="table-responsive">
	                <table class="table table-hover table-striped" id="item-list"></table>
	            </small>
			</div>
		</div>
	</div>
</com:TContent>
