<com:TContent ID="MainContent">
<com:Application.controls.fancybox.FancyBox />
<com:Application.controls.chosen.Chosen />
	<div class="pagewrapper productlistwraper">
		<div class="col-xs-12">
			<div class="panel panel-default" id="searchPanel">
				<div class="panel-heading">
					<label for="showSearch">Show Search Criteria?</label>
					<input id="showSearch" type="checkbox" onclick="$(this).up('#searchPanel').down('.panel-body').toggle();">
					<span class="pull-right">
						<span id="searchBtn" class="btn btn-primary btn-sm" data-loading-text="searching ..." onclick="pageJs.getSearchCriteria().getResults(true, <%= $this->pageSize %>);" >Search</span>
					</span>
				</div>
				<div class="panel-body search-panel" id="searchDiv" style="display: none; overflow: visible;">
					<div class="row">
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">PO No.:</label>
	                           <input type="text" search_field="po.purchaseOrderNo" placeholder="The Purchase Order Number" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Supplier Ref:</label>
	                           <input type="text" search_field="pro.supplierRefNo" placeholder="The refrerence number from the supplier" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-4">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Order Date:</label>
	                           <input type="text" search_field="pro.orderDate_from" placeholder="The order date - from" class="form-control input-sm">
	                           <input type="text" search_field="pro.orderDate_to" placeholder="The order date - to" class="form-control input-sm">
	                       </div>
						</div>
						<div class="col-md-4">
	                        <div class="form-group form-group-sm input-group">
				                <label class="input-group-addon">Suppliers: </label>
				                <div class="form-control" style="padding: 0px; height: 100%;">
				                	<select search_field="pro.supplierIds" multiple class="chosen"></select>
		                        </div>
	                        </div>
						</div>
						<div class="col-md-2">
							<div class="form-group form-group-sm input-group">
	                           <label class="input-group-addon">Status:</label>
	                           <div class="form-control" style="padding: 0px; height: 100%;">
                                    <select search_field="pro.productStatusIds" multiple class="chosen"></select>
                                </div>
	                       </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12 list-panel">
			<div class="panel panel-default">
				<div class="panel-heading">
					Found <label id="total-found-count">0</label> Purchase Orders:
				</div>
				<div class="table-responsive">
	                <table class="table table-hover" id="item-list"></table>
	            </div>
			</div>
		</div>
	</div>
</com:TContent>
